<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center|start"
              android:padding="@dimen/rootContainer_padding"
              tools:context=".ui.clock_late.ClockLateFragment">
    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/icon_central_size"
            android:layout_height="@dimen/icon_central_size"
            app:srcCompat="@drawable/ic_baseline_timer_24"
            app:tint="@color/red"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/title_clock_late"
              android:textSize="24sp"
              android:textColor="?attr/colorOnSurface"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/text_clock_late"/>
</LinearLayout>